{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@split/constants": ["libs/constants/src/index.ts"],
      "@split/graphql": ["libs/graphql/client/src/index.ts"],
      "@split/hooks": ["libs/hooks/src/index.ts"],
      "@split/model": ["libs/model/src/index.ts"],
      "@split/ui": ["libs/ui/src/index.ts"],
      "@split/utils": ["libs/utils/src/index.ts"],
      "~/client-demo/*": ["apps/client-demo/*"],
      "~/client-user/*": ["apps/client-user/*"],
      "~/server/*": ["apps/server/*"],
      "~/ui/*": ["libs/ui/*"],
      "~/prisma/*": ["libs/prisma/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", ".next"]
}
