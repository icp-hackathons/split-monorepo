{
  "files.exclude": {
    ".husky": false,
    ".editorconfig": false,
    ".lintstagedrc": false,
    ".gitmessage.txt": false,
    "jest.config.ts": false,
    "jest.preset.js": false,
    ".prettierignore": false,
    ".prettierrc": false,
    ".nxignore": false,
    ".gitignore": false,
    ".gitmodules": false,
    "commitlint.config.js": false,
    "**/.next/": true,
    "**/node_modules/": true
  },
  "search.exclude": {
    "node_modules/": true,
    "**/node_modules/": true,
    "dist/": true,
    "tmp/": true,
    "**/.next/": true,
    "**/*.lock": true
  },
  "workbench.colorCustomizations": {
    "activityBar.activeFocusBorder": "#001494",
    "activityBar.activeBackground": "#FFFFFF",
    "activityBar.background": "#333333",
    "activityBar.foreground": "#001494",
    "activityBar.inactiveForeground": "#FFFFFF",
    "editorGroup.border": "#444444",
    "sash.hoverBorder": "#666666",
    "sideBar.border": "#001494",
    "tab.activeBorder": "#000000"
  },
  "editor.formatOnSave": true,
  "prettier.configPath": ".prettierrc",
  "prettier.printWidth": 120,
  "prettier.trailingComma": "all",
  "tailwindCSS.experimental.classRegex": ["clsx\\(([^)]*)\\)", "\"([^\"]*)\""],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/.next/**",
    "**/tmp/**",
    "**/.cache/**"
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": [
    "clsx",
    "codegen",
    "commitlint",
    "gitmessage",
    "nestjs",
    "Pretendard",
    "siwe",
    "tailwindcss",
    "wagmi"
  ]
}
